<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llUsrId">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="UserID"
            android:id="@+id/tvUsrId"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/etUsrId"
            android:layout_weight="1"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llUsrId"
        android:id="@+id/llRoomName"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Room Name"
            android:id="@+id/tvRoomName"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/etRoomName"
            android:layout_weight="0.69"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llRoomName"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:id="@+id/llBt">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:text="ON"
            android:id="@+id/btOn"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:onClick="btOnClick"
            android:layout_weight="0.07" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:text="OFF"
            android:id="@+id/btOff"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:onClick="btOffClick"
            android:layout_weight="0.07" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llBt"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:id="@+id/llImg">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivBulb" />
    </LinearLayout>
</RelativeLayout>
